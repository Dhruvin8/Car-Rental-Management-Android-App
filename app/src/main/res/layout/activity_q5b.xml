<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Q5a">

    <EditText
        android:id="@+id/searchB_vin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="vin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />
    <EditText
        android:id="@+id/searchB_vehDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/buttonSearchB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"

        app:layout_constraintTop_toBottomOf="@id/searchA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewB"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSearchA" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Q4">

    <include layout="@layout/header" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Return Date" />

    <EditText
        android:id="@+id/custId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Customer_ID"
        />

    <EditText
        android:id="@+id/vehId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter VehicleID"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/btnSearchBal"
        android:background="#D8B4FE"
        android:textColor="#581C87"
        android:text="Search"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_marginTop="24dp"
        android:paddingBottom="24dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remBal"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            tools:text="Rem bal"
            android:layout_marginHorizontal="16dp"
            android:textSize="24sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/btnPayBal"
            android:background="#D8B4FE"
            android:textColor="#581C87"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Pay Now"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>


</LinearLayout>